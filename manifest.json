{
  "manifest_version": 2,


  "name": "__MSG_manifest_name__",
  "description": "__MSG_manifest_desc__",
  "version": "0.2.1",

  "default_locale": "en",

  "options_page": "options.html",


  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "series tracker"
  },

  "icons": {
          "128": "icon.png" },

"optional_permissions": [ "clipboardRead", "clipboardWrite" ],

  "permissions": [
    "http://www.omdbapi.com/*",
    "http://api.tvmaze.com/*",
    "storage",
    "tabs"
  ]
}
